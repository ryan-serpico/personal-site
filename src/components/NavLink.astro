---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;

// Handle base path for internal links
const resolvedHref = href.startsWith('/') && !href.startsWith('http') 
    ? import.meta.env.BASE_URL.replace(/\/$/, '') + href
    : href;

const isActive = resolvedHref === pathname || resolvedHref === pathname.replace(/\/$/, '');
---

<a class:list={[className, { 'underline underline-offset-2 decoration-1': isActive }]} href={resolvedHref} {...props}>
    <slot />
</a>
